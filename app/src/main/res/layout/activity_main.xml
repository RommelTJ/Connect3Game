<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.rommelrico.connect3game.MainActivity">

    <GridLayout
            android:layout_width="368dp"
            android:layout_height="368dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:id="@+id/gridLayout"
            android:rowCount="3" android:columnCount="3" android:background="@drawable/board">

        <ImageView
                android:layout_height="100dp" app:srcCompat="@drawable/red" android:id="@+id/imageViewTopLeft"
                android:layout_width="100dp" android:layout_margin="10dp"/>

        <ImageView
                android:layout_height="100dp" app:srcCompat="@drawable/red" android:id="@+id/imageViewTopMiddle"
                android:layout_width="100dp" android:layout_margin="10dp"/>

        <ImageView
                android:layout_height="100dp" app:srcCompat="@drawable/red" android:id="@+id/imageViewTopRight"
                android:layout_width="100dp" android:layout_margin="10dp"/>

        <ImageView
                android:layout_height="100dp" app:srcCompat="@drawable/red" android:id="@+id/imageViewMiddleLeft"
                android:layout_width="100dp" android:layout_margin="10dp"/>

        <ImageView
                android:layout_height="100dp" app:srcCompat="@drawable/red" android:id="@+id/imageViewMiddleMiddle"
                android:layout_width="100dp" android:layout_margin="10dp"/>

        <ImageView
                android:layout_height="100dp" app:srcCompat="@drawable/red" android:id="@+id/imageViewMiddleRight"
                android:layout_width="100dp" android:layout_margin="10dp"/>

        <ImageView
                android:layout_height="100dp" app:srcCompat="@drawable/red" android:id="@+id/imageViewBottomLeft"
                android:layout_width="100dp" android:layout_margin="10dp"/>

        <ImageView
                android:layout_height="100dp" app:srcCompat="@drawable/red" android:id="@+id/imageViewBottomMiddle"
                android:layout_width="100dp" android:layout_margin="10dp"/>

        <ImageView
                android:layout_height="100dp" app:srcCompat="@drawable/red" android:id="@+id/imageViewBottomRight"
                android:layout_width="100dp" android:layout_margin="10dp"/>


    </GridLayout>
</android.support.constraint.ConstraintLayout>
